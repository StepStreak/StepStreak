<%= turbo_frame_tag(:goals) do %>
  <div class="items-center justify-between p-4 bg-white border border-gray-200 rounded-lg shadow-sm sm:flex dark:border-gray-700 sm:p-6 dark:bg-gray-800">
    <div class="w-full">
      <div class="flex flex-row justify-between">
        <h3 class="text-l font-bold leading-none text-gray-900 dark:text-white"><%= goal_label(@goal) %></h3>
        <%= link_to @goal.present? ? edit_goal_path(@goal) : new_goal_path, class: 'long-press-disabled' do %>
          <svg class="w-5 h-5 fill-gray" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
        <% end %>
      </div>

      <div class="flex justify-between mt-6">
        <div class="w-full">
          <div class="flex items-center mb-2">
            <div class="ml-auto w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
              <div class="bg-primary-600 h-2.5 rounded-full dark:bg-primary-500" style="width: <%= goal_progress(@goal&.target.to_i, @user_progress) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>