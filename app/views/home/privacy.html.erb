<% content_for :title, t('.privacy_policy_page_title') %>
<main class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col justify-center items-center px-6 mx-auto xl:px-0 dark:bg-gray-900">
    <div class="text-center xl:max-w-4xl mt-5">
      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <%= t('.effective_date') %>
      </p>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <%= t('.welcome_text') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.data_collection.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_collection.what_we_collect.label') %></strong> <%= t('.data_collection.what_we_collect.content') %>
      </p>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_collection.purpose.label') %></strong> <%= t('.data_collection.purpose.content') %>
      </p>

      <p class="text-base mb-5 dark:text-gray-400">
        <%= t('.data_collection.google_api_notice') %>
        <a href="https://developers.google.com/terms/api-services-user-data-policy" class="text-blue-500">
          <%= t('.data_collection.google_api_link_text') %>,
        </a>
        <%= t('.data_collection.google_api_notice_2') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.data_control.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_control.rights.label') %></strong> <%= t('.data_control.rights.content') %>
      </p>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_control.management.label') %></strong> <%= t('.data_control.management.content') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.data_sharing.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_sharing.internal_use.label') %></strong> <%= t('.data_sharing.internal_use.content') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.data_security.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.data_security.commitment.label') %></strong> <%= t('.data_security.commitment.content') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.account_deletion.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.account_deletion.process.label') %></strong> <%= t('.account_deletion.process.content') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.policy_changes.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.policy_changes.updates.label') %></strong> <%= t('.policy_changes.updates.content') %>
      </p>

      <h3 class="mb-3 text-xl font-bold leading-tight text-gray-900 sm:text-4xl lg:text-3xl dark:text-white">
        <%= t('.contact.title') %>
      </h3>

      <p class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400">
        <strong><%= t('.contact.feedback.label') %></strong> <%= t('.contact.feedback.content') %>
      </p>
    </div>
  </div>
</main>